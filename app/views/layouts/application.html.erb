<!DOCTYPE html>
<html>
<head>
  <title>Wincle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <h2>Wincle</h2>
  <% if logged_in? %>
  <nav>
    <ul>
    <li><%= link_to "Profile", user_path(@user) %></li>

    <% if current_user.user_type == "employer" %>
    <li><a href="">Find an Employee</a></li>
    <% else %>
    <li><%= link_to "Jobs", employees_path %> </li>
    <% end %>
    <li><%= link_to "Logout", user_path(@user), method: :delete %></li>
  </ul>
</nav>
<% end %>
</header>

<%= yield %>

</body>
</html>
