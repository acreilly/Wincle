<center>
  <div id="logindiv">

    <!-- Login form -->
    <ul id="buttons">
      <li><button id="login">Login</button></li>
      <li><button id="signup">Sign up</button></li>
    </ul>

    <div id="loginForm">
      <button class="goBack">Go Back</button>
      <%= form_for :users, url: {controller: "sessions", action: "create"} do |f| %>
      <%= f.text_field :email, required: true, type: "email", pattern: "[^@]+@[^@]+\.[a-zA-Z]{2,6}", placeholder: "E-MAIL" %>
      <br>
      <%= f.password_field :password, required: true, placeholder: "PASSWORD" %>
      <br>
      <%= f.submit "Login" %>
      <% end %>
    </div>
    <!-- Create Account Form -->
    <div id="signupForm">
      <button class="goBack">Go Back</button>
      <%= form_for @user, {action: "create"} do |f| %>
      <%= f.select :user_type, options_for_select([["Employee", "employee"], ["Employer", "employer"]]), {:include_blank => '-- Select TYPE --'}, :required => true  %>
      <br>
      <%= f.text_field :first_name, placeholder: "FIRST NAME" %>
      <br>
      <%= f.text_field :last_name, placeholder: "LAST NAME" %>
      <br>
      <%= f.text_field :telephone, placeholder: "TELEPHONE" %>
      <br>
      <%= f.text_field :email, required: true, type: "email", pattern: "[^@]+@[^@]+\.[a-zA-Z]{2,6}", placeholder: "E-MAIL" %>
      <br>
      <%= f.password_field :password, required: true, placeholder: "PASSWORD" %>
      <br>
      <%=f.password_field :password_confirmation, required: true, placeholder: "PASSWORD CONFIRMATION" %>
      <br>
      <%= f.submit "Sign up" %>
      <% end %>
    </div>
  </div>
   <% if logged_in? %>
    <h1>Welcome <%= current_user.email %>.</h1>
    <% end %>

    <% if logged_in? %>
    <script>
    $("#logindiv").remove()
    </script>
    <% end %>
</center>
