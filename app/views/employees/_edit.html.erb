<%= form_for @employee do |f| %>
  <%= f.label :industry %>
  <%= f.select :industry, options_for_select(@industry)  %>
  <br>
  <%= f.label :job_title %>
  <%= f.text_field :job_title  %>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <br>
  <%= f.submit "Save Employee Profile" %>
<% end %>
